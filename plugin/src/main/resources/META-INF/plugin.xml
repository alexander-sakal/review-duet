<idea-plugin>
    <id>com.codereview.local</id>
    <name>Review Duet</name>
    <vendor>Review Duet</vendor>
    <description>Local code review workflows for AI-assisted development</description>

    <depends>com.intellij.modules.platform</depends>
    <depends>Git4Idea</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Review Duet"
                    anchor="right"
                    factoryClass="com.codereview.local.ui.ReviewToolWindowFactory"
                    icon="AllIcons.Actions.Annotate"/>
        <diff.DiffExtension implementation="com.codereview.local.diff.DiffCommentExtension"/>
    </extensions>

    <projectListeners>
        <listener class="com.codereview.local.listeners.ReviewFileWatcher"
                  topic="com.intellij.openapi.vfs.newvfs.BulkFileListener"/>
        <listener class="com.codereview.local.listeners.ReviewBranchChangeListener"
                  topic="com.intellij.openapi.vcs.BranchChangeListener"/>
    </projectListeners>

    <actions>
        <action id="CodeReview.GoToSource"
                class="com.codereview.local.actions.GoToSourceAction"
                text="Go to Source"
                description="Open the source file at current line">
            <keyboard-shortcut keymap="$default" first-keystroke="F4"/>
            <add-to-group group-id="Diff.EditorPopupMenu" anchor="first"/>
        </action>
        <group id="CodeReview.DiffToolbarGroup">
            <separator/>
            <action id="CodeReview.MarkFileReviewed"
                    class="com.codereview.local.actions.MarkFileReviewedAction"
                    text="Mark Reviewed"
                    icon="AllIcons.General.InspectionsEye"
                    description="Toggle file reviewed status"/>
            <add-to-group group-id="Diff.ViewerToolbar" anchor="last"/>
        </group>
    </actions>
</idea-plugin>
