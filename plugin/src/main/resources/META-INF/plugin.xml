<idea-plugin>
    <id>com.codereview.local</id>
    <name>Code Review Local</name>
    <vendor>Code Review Local</vendor>
    <description>Local code review workflows for AI-assisted development</description>

    <depends>com.intellij.modules.platform</depends>
    <depends>Git4Idea</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Code Review"
                    anchor="right"
                    factoryClass="com.codereview.local.ui.ReviewToolWindowFactory"
                    icon="AllIcons.Actions.Annotate"/>
        <codeInsight.lineMarkerProvider
            language=""
            implementationClass="com.codereview.local.gutter.ReviewGutterProvider"/>
        <diff.DiffExtension implementation="com.codereview.local.diff.DiffCommentExtension"/>
    </extensions>

    <projectListeners>
        <listener class="com.codereview.local.listeners.ReviewFileWatcher"
                  topic="com.intellij.openapi.vfs.newvfs.BulkFileListener"/>
    </projectListeners>

    <actions>
        <action id="CodeReview.AddComment"
                class="com.codereview.local.actions.AddCommentAction"
                text="Add Review Comment"
                description="Add a review comment at current line">
            <keyboard-shortcut keymap="$default" first-keystroke="alt shift C"/>
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
        <action id="CodeReview.GoToSource"
                class="com.codereview.local.actions.GoToSourceAction"
                text="Go to Source"
                description="Open the source file at current line">
            <keyboard-shortcut keymap="$default" first-keystroke="F4"/>
            <add-to-group group-id="Diff.EditorPopupMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>
